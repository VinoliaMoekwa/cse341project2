{
  "swagger": "2.0",
  "info": {
    "title": "Orders and Products API",
    "description": "API for managing orders and products",
    "version": "1.0.0"
  },
  "host": "cse341project2-8qb2.onrender.com",
  "basePath": "/",
  "schemes": ["https"],
  "paths": {
    "/orders": {
      "get": {
        "tags": ["Orders"],
        "description": "Retrieve all orders",
        "responses": {
          "200": { "description": "OK" }
        }
      },
      "post": {
        "tags": ["Orders"],
        "description": "Create a new order",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Order"
            }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/orders/{id}": {
      "get": {
        "tags": ["Orders"],
        "description": "Retrieve a single order",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "format": "objectId"
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "404": { "description": "Order not found" }
        }
      },
      "put": {
        "tags": ["Orders"],
        "description": "Update an order",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "format": "objectId"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Order"
            }
          }
        ],
        "responses": {
          "200": { "description": "Order updated" }
        }
      },
      "delete": {
        "tags": ["Orders"],
        "description": "Delete an order",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "format": "objectId"
          }
        ],
        "responses": {
          "200": { "description": "Order deleted" }
        }
      }
    },
    "/products": {
      "get": {
        "tags": ["Products"],
        "description": "Retrieve all products",
        "responses": {
          "200": { "description": "OK" }
        }
      },
      "post": {
        "tags": ["Products"],
        "description": "Create a new product",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Product"
            }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "500": { "description": "Internal Server Error" }
        }
      }
    }
  },
  "definitions": {
    "Order": {
      "type": "object",
      "properties": {
        "_id": { "type": "string", "format": "objectId" },
        "customerName": { "type": "string" },
        "quantity": { "type": "any" },
        "totalPrice": { "type": "any" },
        "orderDate": { "type": "any" },
        "shippingAddress": { "type": "any" },
        "province": { "type": "any" }
      }
    },
    "Product": {
      "type": "object",
      "properties": {
        "_id": { "type": "string", "format": "objectId" },
        "name": { "type": "string" },
        "category": { "type": "any" },
        "price": { "type": "any" },
        "stock": { "type": "any" }
      }
    }
  }
}

    
