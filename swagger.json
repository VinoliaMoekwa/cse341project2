{
  "swagger": "2.0",
  "info": {
    "title": "Orders and Products API",
    "description": "API for managing orders and products",
    "version": "1.0.0"
  },
  "host": "https://cse341project2-8qb2.onrender.com/api-docs",
  "basePath": "/",
  "schemes": ["https"],
  "paths": {
    "/orders": {
      "get": {
        "tags": ["Orders"],
        "description": "Retrieve all orders",
        "responses": {
          "200": { "description": "OK" }
        }
      },
      "post": {
        "tags": ["Orders"],
        "description": "Create a new order",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "objectId",
              "properties": {
                "customerName": { "type": "string", "example": "any" },
                "quantity": { "type": "string", "example": "any" },
                "totalPrice": { "type": "string", "example": "any" },
                "orderDate": { "type": "string", "example": "any" },
                "shippingAddress": { "type": "string", "example": "any" },
                "province": { "type": "string", "example": "any" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/products": {
      "get": {
        "tags": ["Products"],
        "description": "Retrieve all products",
        "responses": {
          "200": { "description": "OK" }
        }
      },
      "post": {
        "tags": ["Products"],
        "description": "Create a new product",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "objectId",
              "properties": {
                "name": { "type": "string", "example": "any" },
                "category": { "type": "string", "example": "any" },
                "price": { "type": "string", "example": "any" },
                "stock": { "type": "string", "example": "any" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "500": { "description": "Internal Server Error" }
        }
      }
    }
  }
}
